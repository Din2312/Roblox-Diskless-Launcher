<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roblox Diskless Launcher" Height="450" Width="750"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <DropShadowEffect x:Key="NeonGlow" Color="#B026FF" BlurRadius="20" ShadowDepth="0" Opacity="0.7"/>
        <DropShadowEffect x:Key="CardShadow" Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>

        <Style x:Key="GameCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#00C2FF"/>
                    <Setter Property="Background" Value="#252525"/>
                    <Setter Property="Panel.ZIndex" Value="1"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0,8,8,0">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A35"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PlayBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="#00C2FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource NeonGlow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" CornerRadius="22" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#B026FF"/>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bdr" Property="Background" Value="#333"/>
                                <Setter Property="Effect" Value="{x:Null}"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" BorderThickness="1" BorderBrush="#444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#00C2FF"/>
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>

        <Border x:Name="MainBorder" Visibility="Hidden" CornerRadius="15" BorderThickness="1" Background="#121212">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#00C2FF" Offset="0"/>
                    <GradientStop Color="#B026FF" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#1E1E1E" CornerRadius="14,0,0,14">
                    <StackPanel Margin="0,20,0,0">
                        <Border Width="70" Height="70" CornerRadius="35" BorderThickness="2" BorderBrush="#00C2FF" Margin="0,0,0,10">
                            <Border.Effect>
                                <DropShadowEffect Color="#00C2FF" BlurRadius="10" Opacity="0.5"/>
                            </Border.Effect>
                            <Border.Background>
                                <ImageBrush ImageSource="avatar.png" Stretch="UniformToFill"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Text="Roblox Player" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="16"/>
                        <TextBlock x:Name="TxtLicenseStatus" Text="Checking License..." Foreground="#888" HorizontalAlignment="Center" FontSize="10" FontWeight="Bold" Margin="0,4,0,4"/>

                        <Border Height="18" Width="180" ClipToBounds="True" Background="Transparent" Margin="0,0,0,20">
                            <Canvas>
                                <TextBlock Text="CAKUNG E-LITE LAUNCHER &amp; DISKLESS CUTOMIZE OS - JANGAN LUPA LOGOUT SETELAH BERMAIN" 
                                           FontSize="9" FontWeight="Bold" Foreground="#00C2FF">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform x:Name="MarqueeTransform" X="0"/>
                                    </TextBlock.RenderTransform>
                                    <TextBlock.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="MarqueeTransform" 
                                                                     Storyboard.TargetProperty="X" 
                                                                     From="180" To="-500" Duration="0:0:12" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </TextBlock.Triggers>
                                </TextBlock>
                            </Canvas>
                        </Border>

                        <Button Content="🏠   HOME" Style="{StaticResource NavBtnStyle}" Click="BtnHome_Click"/>
                        <Button Content="🎮   GAMES" Style="{StaticResource NavBtnStyle}" Click="BtnGames_Click"/>
                        <Button Content="⚙   SETTINGS" Style="{StaticResource NavBtnStyle}" Click="BtnSettings_Click"/>

                        <Button Content="🔑   ACTIVATE" Style="{StaticResource NavBtnStyle}" Foreground="#00C2FF" Click="BtnActivate_Click" Margin="0,10,0,0"/>

                        <Button Content="🎧   SUPPORT" Style="{StaticResource NavBtnStyle}" Foreground="#00C2FF" Click="BtnSupport_Click" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="1" Margin="20">

                    <Grid VerticalAlignment="Top" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="_" Width="30" Height="25" Click="BtnMin_Click" Style="{StaticResource NavBtnStyle}" Padding="0" HorizontalContentAlignment="Center"/>
                            <Button Content="X" Width="30" Height="25" Foreground="#FF4444" Click="BtnClose_Click" Style="{StaticResource NavBtnStyle}" Padding="0" HorizontalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="PageHome" Visibility="Visible" Margin="0,30,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="POPULAR GAMES" Foreground="White" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Black"/>
                            <TextBlock Text="Trending now in your area" Foreground="#666" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>

                        <WrapPanel Grid.Row="1">
                            <Border Style="{StaticResource GameCardStyle}">
                                <Grid>
                                    <Image Source="game_bloxfruits.png" Stretch="UniformToFill" Opacity="0.9"/>
                                    <TextBlock Text="Blox Fruit" Foreground="White" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                                </Grid>
                            </Border>
                            <Border Style="{StaticResource GameCardStyle}">
                                <Grid>
                                    <Image Source="game_brookhaven.png" Stretch="UniformToFill" Opacity="0.9"/>
                                    <TextBlock Text="Brookhaven" Foreground="White" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                                </Grid>
                            </Border>
                        </WrapPanel>

                        <StackPanel Grid.Row="2">
                            <TextBlock x:Name="TxtStatus" Text="Ready to Launch..." Foreground="#888" FontSize="11" Margin="0,0,0,5" HorizontalAlignment="Center"/>

                            <ProgressBar x:Name="PrgBar" 
                                         Width="250" Height="8" 
                                         Minimum="0" Maximum="100" Value="0"
                                         Foreground="#00C2FF" Background="#333" BorderThickness="0"
                                         Visibility="Collapsed" Margin="0,0,0,10"/>

                            <Button x:Name="BtnPlay" Content="PLAY ROBLOX" Style="{StaticResource PlayBtnStyle}" Click="BtnPlay_Click"/>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="PageGames" Visibility="Collapsed" Margin="0,30,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Hidden" PanningMode="VerticalOnly">
                            <StackPanel>
                                <TextBlock Text="ALL GAMES LIBRARY" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" FontFamily="Segoe UI Black"/>

                                <WrapPanel>
                                    <Border Style="{StaticResource GameCardStyle}">
                                        <Grid>
                                            <Image Source="game_fisch.png" Stretch="UniformToFill" Opacity="0.9"/>
                                            <TextBlock Text="Fisch" Foreground="White" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource GameCardStyle}">
                                        <Grid>
                                            <Image Source="game_adoptme.png" Stretch="UniformToFill" Opacity="0.9"/>
                                            <TextBlock Text="Adopt Me!" Foreground="White" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource GameCardStyle}">
                                        <Grid>
                                            <Image Source="game_brookhaven.png" Stretch="UniformToFill" Opacity="0.9"/>
                                            <TextBlock Text="Brookhaven" Foreground="White" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource GameCardStyle}">
                                        <Grid>
                                            <Image Source="game_bloxfruits.png" Stretch="UniformToFill" Opacity="0.9"/>
                                            <TextBlock Text="Blox Fruits" Foreground="White" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource GameCardStyle}">
                                        <Grid>
                                            <Image Source="game_petsim.png" Stretch="UniformToFill" Opacity="0.9"/>
                                            <TextBlock Text="Pet Sim 99" Foreground="White" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource GameCardStyle}">
                                        <Grid>
                                            <Image Source="game_mm2.png" Stretch="UniformToFill" Opacity="0.9"/>
                                            <TextBlock Text="MM2" Foreground="White" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                                        </Grid>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>

                    <Grid x:Name="PageSettings" Visibility="Collapsed" Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="SETTINGS" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
                            <TextBlock Text="Launcher Version: 0.2.2.6 (Elite Edition)" Foreground="#AAA" FontSize="11" Margin="0,0,0,15"/>

                            <Button Content="Clear Roblox Cache" Width="200" Height="40" HorizontalAlignment="Left" Background="#333" Margin="0,0,0,10" 
                                    Style="{StaticResource MenuBtnStyle}" Click="BtnClearCache_Click"/>

                            <Button Content="Force Update Junction" Width="200" Height="40" HorizontalAlignment="Left" Background="#333" Margin="0,0,0,10" 
                                    Style="{StaticResource MenuBtnStyle}" Click="BtnForceUpdate_Click"/>

                            <TextBlock Text="Note: Use these buttons if games fail to load." Foreground="#555" FontSize="10" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>

                </Grid>

                <Grid x:Name="ActivationOverlay" Visibility="Collapsed" Grid.ColumnSpan="2">
                    <Border Background="#CC000000" CornerRadius="15"/>
                    <Border Width="380" Height="300" Background="#1E1E1E" CornerRadius="15" BorderBrush="#00C2FF" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="#00C2FF" BlurRadius="20" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" Margin="25">
                            <TextBlock Text="PREMIUM ACTIVATION" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Enter serial key to unlock." FontSize="11" Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                            <TextBlock Text="Hardware ID:" Foreground="#00C2FF" FontSize="11"/>
                            <TextBox x:Name="TxtHardwareID" Text="LOADING..." IsReadOnly="True" Background="#333" Foreground="White" BorderThickness="0" Padding="8" Margin="0,4,0,10" FontFamily="Consolas" FontSize="11"/>

                            <TextBlock Text="Serial Key:" Foreground="#00C2FF" FontSize="11"/>
                            <TextBox x:Name="TxtLicenseInput" Background="#333" Foreground="White" BorderThickness="0" Padding="8" Margin="0,4,0,15" FontFamily="Consolas" CharacterCasing="Upper" FontSize="12"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="CANCEL" Width="90" Height="35" Background="#333" Margin="4" 
                                        Style="{StaticResource MenuBtnStyle}" Click="BtnCancelActiv_Click"/>
                                <Button Content="ACTIVATE" Width="90" Height="35" Background="#00C2FF" Margin="4" FontWeight="Bold" 
                                        Style="{StaticResource MenuBtnStyle}" Click="BtnSubmitKey_Click"/>
                            </StackPanel>
                            <TextBlock x:Name="TxtMsg" Text="" Foreground="#FF4444" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="10"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid x:Name="SupportOverlay" Visibility="Collapsed" Grid.ColumnSpan="2">
                    <Border Background="#CC000000" CornerRadius="15"/>
                    <Border Width="380" Height="250" Background="#1E1E1E" CornerRadius="15" BorderBrush="#00C2FF" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="#00C2FF" BlurRadius="20" Opacity="0.4"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" Margin="25">
                            <TextBlock Text="SUPPORT &amp; COMMUNITY" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                            <TextBlock Text="Butuh bantuan, lapor bug, atau ingin bergabung dengan komunitas? Klik link di bawah untuk join server Discord kami." 
                                       FontSize="11" Foreground="#888" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                            <TextBlock HorizontalAlignment="Center" Margin="0,0,0,25">
                                 <Hyperlink NavigateUri="https://discord.gg/Nf7GjquBJK" 
                                            RequestNavigate="Hyperlink_RequestNavigate" 
                                            Foreground="#00C2FF" TextDecorations="Underline" Cursor="Hand" FontWeight="Bold" FontSize="14">
                                     JOIN DISCORD SERVER
                                 </Hyperlink>
                            </TextBlock>

                            <Button Content="CLOSE" Width="90" Height="35" Background="#333" Margin="4" HorizontalAlignment="Center"
                                    Style="{StaticResource MenuBtnStyle}" Click="BtnCloseSupport_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </Border>

        <Grid x:Name="EulaOverlay" Visibility="Collapsed" Background="#CC000000" Panel.ZIndex="100">
            <Border Width="600" Height="400" Background="#1E1E1E" BorderBrush="#00C2FF" BorderThickness="1" CornerRadius="10">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="PERJANJIAN LISENSI (EULA)" Foreground="#00C2FF" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <Border Grid.Row="1" Background="#121212" BorderBrush="#333" BorderThickness="1" CornerRadius="5" Margin="0,0,0,15">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                            <TextBlock x:Name="TxtEulaContent" TextWrapping="Wrap" Foreground="White" Padding="10" FontFamily="Consolas" FontSize="11">
                                <Run FontWeight="Bold" Text="PERJANJIAN LISENSI PENGGUNA AKHIR (EULA)&#x0a;ROBLOX DISKLESS LAUNCHER&#x0a;&#x0a;"/>
                                <Run Text="PENTING: MOHON DIBACA DENGAN TELITI.&#x0a;&#x0a;1. LISENSI PENGGUNAAN&#x0a;Anda diberikan izin terbatas untuk menggunakan software ini untuk keperluan manajemen game Roblox di PC pribadi atau Warnet.&#x0a;&#x0a;2. SISTEM KEAMANAN&#x0a;Software ini dilindungi sistem HWID. Dilarang keras membongkar, memodifikasi, atau memintas sistem lisensi aplikasi ini.&#x0a;&#x0a;3. PENOLAKAN JAMINAN&#x0a;Aplikasi disediakan 'SEBAGAIMANA ADANYA'. Pengembang tidak bertanggung jawab atas kerusakan data, banned akun, atau kerugian lainnya akibat penggunaan software ini.&#x0a;&#x0a;4. HAK CIPTA&#x0a;Roblox adalah merek dagang Roblox Corporation. Aplikasi ini adalah alat pihak ketiga yang tidak berafiliasi resmi dengan Roblox.&#x0a;&#x0a;DENGAN KLIK 'SAYA SETUJU', ANDA MENERIMA SEMUA SYARAT DI ATAS."/>
                            </TextBlock>
                        </ScrollViewer>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="TOLAK (KELUAR)" Width="130" Height="35" Background="#FF3333" Foreground="White" FontWeight="Bold" Click="BtnDeclineEula_Click" Margin="0,0,15,0" Style="{StaticResource MenuBtnStyle}"/>
                        <Button Content="SAYA SETUJU" Width="130" Height="35" Background="#00C2FF" Foreground="Black" FontWeight="Bold" Click="BtnAcceptEula_Click" Style="{StaticResource MenuBtnStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="SplashGrid" Background="Transparent" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="logo.png" Height="80" Margin="0,0,0,15" RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Effect>
                        <DropShadowEffect Color="#00C2FF" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                    </Image.Effect>
                </Image>

                <TextBlock Text="ROBLOX LAUNCHER" FontSize="24" FontWeight="Black" HorizontalAlignment="Center" FontFamily="Segoe UI Black" Foreground="White">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#B026FF" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Diskless Mini Edition" Foreground="#888" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>

                <Grid Width="300" Height="4" Margin="0,20,0,0">
                    <Rectangle Fill="#333" RadiusX="2" RadiusY="2"/>
                    <Rectangle Fill="#00C2FF" RadiusX="2" RadiusY="2" HorizontalAlignment="Left" x:Name="SplashProgress">
                        <Rectangle.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width" From="0" To="300" Duration="0:0:3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Rectangle.Triggers>
                    </Rectangle>
                </Grid>

                <TextBlock Text="Loading Modules..." Foreground="#555" FontWeight="Bold" FontSize="9" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>